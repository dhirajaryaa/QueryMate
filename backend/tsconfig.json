{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "target": "ES2022",
    "lib": ["ES2022"],

    "types": ["node"],

    "strict": true,

    "sourceMap": true,

    "declaration": true,

    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "verbatimModuleSyntax": true,
    "isolatedModules": true,

    "skipLibCheck": true
  },

  "include": ["src"]
}